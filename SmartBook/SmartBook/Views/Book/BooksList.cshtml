@model IEnumerable<SmartBook.Models.Book>

@{
    ViewBag.Title = "Books List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Books List</h2>
@if (ViewBag.isAdmin == "true")
{
    <p>
        @Html.ActionLink("Create new Book", "CreateBook")
    </p>
}
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearOfPublish)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Summary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PictureId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WriterName)
            </th>

            <th></th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearOfPublish)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Summary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PictureId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WriterName)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.BookId })
            </td>

            @if (ViewBag.isAdmin == "true")
            {
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.BookId })
             </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.BookId })
             </td>
            }
        </tr>
        }

    </table>
